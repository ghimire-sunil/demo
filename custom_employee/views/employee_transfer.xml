<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_form_inherit_branch_transfer" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.branch.transfer</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!-- Insert the button in the header -->
                <xpath expr="//header" position="inside">
                    <button name="action_open_branch_transfer_wizard"
                            string="Branch Transfer"
                            type="object"
                            class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
